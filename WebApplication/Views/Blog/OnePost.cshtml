@using WebApplication.Entities
@{ 
    var post = Model.Post as Post;
    var tags = Model.Tags as List<Tag>;
}  

<!-- START: Breadcrumbs -->
<div class="nk-gap-1"></div>
<div class="container">
    <ul class="nk-breadcrumbs">
        <li><a href="/">Home</a></li>
        <li><span class="fa fa-angle-right"></span></li>
        <li><a href="/blog">Blog</a></li>
        <li><span class="fa fa-angle-right"></span></li>
        <li><span>@post.Title</span></li>
    </ul>
</div>
<div class="nk-gap-1"></div>
<!-- END: Breadcrumbs -->

<div class="container">
    <div class="row vertical-gap">
        <div class="col-lg-12">
            <!-- START: Post -->
            <div class="nk-blog-post nk-blog-post-single">
                <input type="hidden" name="postId" id="postId" value="@post.Id" />
                <!-- START: Post Text -->
                <div class="nk-post-text mt-0">
                    <div class="nk-post-img">
                        <img src="@post.ImgSrc" alt="@post.ImgAlt">
                    </div>
                    <div class="nk-gap-1"></div>
                    <h1 class="nk-post-title h4">@post.Title</h1>
                    <div class="nk-post-by">
                        <div class="nk-post-category"><span class="bg-main-4"> @post.DateOfPunlished.ToShortDateString()</span></div>
                        <div class="nk-post-categories">
                            Platform:&nbsp;<span class="bg-main-1">@post.Platform.Name</span>
                            Genre:&nbsp;<span class="bg-main-2">@post.Genre.Name</span>
                            Category:&nbsp;<span class="bg-main-3">@post.Category.Name</span>
                        </div>
                    </div>
                    <div class="nk-gap"></div>
                    <!-- START: Post Context -->
                        @Html.Raw(@post.Content)  
                    <!-- END: Post Context -->
                    <div class="nk-post-by">
                        <div class="nk-post-categories">
                            Tags:&nbsp;
                            @foreach (Tag oneTag in tags)
                            {
                                <a href="/blog/getPosts?tag=@oneTag.Slug" class="m-5 one-tag"><span class="bg-main-1">@oneTag.Name</span></a>
                            }
                        </div>
                    </div>
                    <div class="nk-gap"></div>
                </div>
                <!-- END: Post Text -->
                <!-- START: Comments -->
                <h3 class="nk-decorated-h-2"><span><span class="text-main-1" id="countCommentBox">3</span> Comments</span></h3>
                <div class="nk-gap"></div>
                <div class="nk-comments" id="comments">

                </div>
                <!-- END: Comments -->
                <!-- START: Reply -->
                <div class="nk-gap-2"></div>
                <h3 class="nk-decorated-h-2"><span><span class="text-main-1">Leave</span> a Reply</span></h3>
                <div class="nk-gap"></div>
                <div class="nk-reply">
                    <form action="#" class="nk-form sendCommentForm" novalidate="novalidate">
                        <div class="row sm-gap vertical-gap">
                            <div class="col-md-6">
                                <input type="email" class="form-control required" name="VisitorEmail" placeholder="Email *">
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control required" name="VisitorName" placeholder="Name *">
                            </div>
                        </div>
                        <div class="nk-gap-1"></div>
                        <textarea class="form-control required" name="Text" rows="5" placeholder="Message *" aria-required="true"></textarea>
                        <div class="nk-gap-1"></div>
                        <div class="nk-form-response-success"></div>
                        <div class="nk-form-response-error"></div>
                        <button type="button" class="nk-btn nk-btn-rounded nk-btn-color-main-1 button-send-comment">Post Comment</button>
                    </form>
                </div>
                <!-- END: Reply -->
                <script src='~/js/comments.js'> </script>
            </div>
            <!-- END: Post -->
        </div>
    </div>
</div>

<div class="nk-gap-2"></div>
