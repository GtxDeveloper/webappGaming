@using WebApplication.Entities
@{
    var option = Model as Option;
}
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-fluid">
            <div class="row g-5 g-xl-10 mb-5 mb-xl-10">
                <div class="col-md-12 mb-md-5 mb-xl-10">
                    <div class="card mb-5 mb-xl-8">
                        <div class="card-header border-0 pt-5">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label fw-bold fs-3 mb-1">Создание Новой Опции</span>
                            </h3>
                        </div>
                        <div class="card-body py-3">
                            <form asp-action="UpdateOption" asp-controller="Admin" method="post">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="mb-5">
                                            <label class="fs-6 form-label fw-bold text-dark">ID</label>
                                            <input type="text" readonly class="form-control form-control form-control-solid" name="Id" value="@option.Id" />
                                        </div>
                                        <div class="mb-5">
                                            <label class="fs-6 form-label fw-bold text-dark">Name</label>
                                            <input type="text" class="form-control form-control form-control-solid" @(option.IsSystem ? "readonly": "") name="Name" value="@option.Name" />
                                        </div>
                                        <div class="mb-5">
                                            <label class="fs-6 form-label fw-bold text-dark">Key</label>
                                            <input type="text" class="form-control form-control form-control-solid" name="Key" value="@option.Key" />
                                        </div>
                                        <div class="mb-5">
                                            <label class="fs-6 form-label fw-bold text-dark">Value</label>
                                            <input type="text" class="form-control form-control form-control-solid" name="Value" value="@option.Value"/>
                                        </div>
                                        <div class="mb-5">
                                            <label class="fs-6 form-label fw-bold text-dark">Relation</label>
                                            <input type="text" class="form-control form-control form-control-solid" name="Relation" value="@option.Relation" />
                                        </div>
                                        <div class="mb-5">
                                            <label class="fs-6 form-label fw-bold text-dark">Order</label>
                                            <input type="number" class="form-control form-control form-control-solid" name="Order" min="1" max="100" value="@option.Order" />
                                        </div>
                                        <div class="d-flex align-items-center justify-content-end">
                                            <input type="reset" class="btn btn-danger me-3" value="Отмена" />
                                            <input type="submit" class="btn btn-success" value="Обновить" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
